<chapter xml:id="Calculus_6">



<!-- =================================================================================================== -->
<!-- Title and Other Preliminaries -->
<!-- =================================================================================================== -->
        <title>CA6: The Directional Derivative </title>

        <!-- <frontmatter> -->

<!--             <titlepage>
